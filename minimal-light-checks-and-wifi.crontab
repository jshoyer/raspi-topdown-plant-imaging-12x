#30,31,32,33,34 16 * * * /bin/sleep 25; /usr/bin/raspistill -o /home/pi/postdusk-images/$(date +"\%Y-\%m-\%d_\%H\%M\%S")_$(hostname).jpg
#30,31,32,33,34 16 * * * /bin/sleep 15; /usr/bin/raspistill -o /home/pi/postdusk-images/$(date +"\%Y-\%m-\%d_\%H\%M\%S")_$(hostname).jpg
